<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheet/style.css">
  <title>Document</title>
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900 ">
    <div class="form p-10 text-white">
      <form action="/create" method="post" >
        <input type="text" placeholder="enter the title" class="block bg-zinc-800 w-full rounded-md outline-none mb-4 p-2" name="title">
        <textarea class="block bg-zinc-800 w-full rounded-md outline-none resizer-none mb-4 p-2" placeholder="Enter your description" rows="5" cols="30" name="details"></textarea>
      <input type="submit" value="create task" class="bg-blue-700 rounded-md outline-none px-2 py-2 cursor-pointer">
      </form>
    </div>
    
    <div class="tasks p-10 flex gap-x-3 flex-wrap">
      <% if(files.length>0){ %>
        <% files.forEach((val)=>{ %>
          <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
            <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
            <div class="flex w-full justify-between items-center mt-3">
            <a href="/files/<%=val %>" class="text-blue-500 inline-block ">Read more..</a>
            <a href="/edit/<%=val %>" class="text-zinc-600 ">edit</a>
          </div>
          </div>
        <% }) %>
      <% }else { %>
        <h3 class="text-zinc-500 text-2xl">No tasks yet</h3>
     <% } %>
      
    </div>
  </div>
</body>
</html>